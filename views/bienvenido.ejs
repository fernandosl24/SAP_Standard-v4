  <section id="contact" class="parallax-section">
     <div class="container">
          <div class="row">

               <div class="col-md-12 col-sm-12">
                    <!-- SECTION TITLE -->
                    <div class="wow fadeInUp section-title text-center" data-wow-delay="0.2s">
                         <h2>Crear pedido de Venta</h2>
                          <p class="lead">Completa la forma para poder ingresar un pedido de Venta directo al ERP.</p>
                          <br>
                    </div>
               </div>

               <div class="forma col-md-12 col-sm-12 text-center">
                    <!-- CONTACT FORM HERE -->
                    <div class="wow fadeInUp" data-wow-delay="0.4s">
                        <form id="contact-form" action="#" method="post">
                              <div class="input">
                                    <h5>Empleado:</h5>
                                   <input type="text" id="empleado_id" class="form-control" name="name" value="Fernando Sanchez Lara" required="" disabled>
                              </div>
                              <br>
                              <div class="input">
                                    <h5>Cliente:</h5>
                                   <select class="form-control" id="dropdown_cliente">
                                    <option>Volkswagen</option>
                                    <option>Coca Cola</option>
                                    <option>American Airlines</option>
                                    <option>Procter & Gamble</option>
                                    <option>Calvin Klein</option>
                                  </select>
                              </div>
                              <br>
                              <div class="input">
                                <h5>Fecha de Entrega Solicitada:</h5>
                                <input type="date" id="fecha_de_entrega" name="fecha_de_entrega">
                              </div>
                              <br>
                              <div class="input">
                                   <h5>Producto:</h5>
                                   <select class="form-control" id="dropdown_producto">
                                    <option>SAP Fiori</option>
                                    <option>SAP ERP ECC</option>
                                    <option>SAP S/4HANA</option>
                                    <option>SAP Ariba</option>
                                    <option>SAP SuccessFactors</option>
                                  </select>
                              </div>
                              <br>
                              <div class="input">
                                   <h5>Cantidad:</h5>
                                   <input id="cantidad" type="text" name="cantidad">
                              </div>
                              <br>
                              <div>
                                   <button id="crear_pedido" type="submit" class="btn btn-lg btn-primary" onclick="CrearPedido();return false" name="submit">Crear Pedido</button>

                                   <button id="ver_pedidos" type="submit" class="btn btn-lg btn-success" onclick="mispedidos();return false" name="submit">Ver Pedidos</button>
                              </div>
                        </form>
                    </div>
               </div>
          </div>
     </div>
</section>


<!-- modal de confirmación de reserva -->

<div class="modal fade" id="modalConfirmacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tituloModal">Confirmación de Éxito</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="text-center" id="MensajeModalConfirmacion"> 
          <p><b>Tu pedido de venta se ha generado satisfactoriamente. </b></p>
        </div>
        <div>
        <p class="text-center" id="mis_pedidos_boton"><a class="btn btn-success text-center" href="#" target"_blank" onclick="mispedidos();return false" id="mis_pedidos">Ver mis pedidos</a></p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

